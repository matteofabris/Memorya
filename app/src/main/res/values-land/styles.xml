<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LabelStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:fontFamily">@font/barlow_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_font_size</item>
    </style>

    <style name="WhiteLabelStyle" parent="LabelStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabLabelStyle" parent="LabelStyle">
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">@dimen/mini_font_size</item>
    </style>

    <style name="RecentAttemptsLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/barlow_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_font_size</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:backgroundTint">@color/color_states_materialbutton</item>
    </style>

    <style name="ImageButtonStyle" parent="@style/ButtonStyle">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="TopBarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/extra_big_font_size</item>
    </style>

    <style name="TopBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:backgroundTint">@color/palette_color_3</item>
    </style>

    <style name="CategoryLabelStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/barlow_semibold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
</resources>