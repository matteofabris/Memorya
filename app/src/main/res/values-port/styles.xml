<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LabelStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/doppio_one</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="RecentAttemptsLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/doppio_one</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/doppio_one</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="TopBarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/doppio_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_font_size</item>
    </style>

    <style name="TopBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:backgroundTint">@color/wm_primaryVariant</item>
    </style>

    <style name="TabViewTextStyle">
        <item name="android:fontFamily">@font/doppio_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="CategoryLabelStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/doppio_one</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
</resources>