<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/palette_color_1</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_color_2</item>
        <item name="colorPrimaryVariant">@color/palette_color_3</item>
        <item name="colorOnPrimary">@color/palette_color_3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>