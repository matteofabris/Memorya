<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="playViewModel"
            type="com.example.wordsmemory.play.PlayFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topBar"
            style="@style/topBarStylePhone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/topBarTitle"
                    style="@style/topBarTitlePhone"
                    android:text="@string/app_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/vocabularyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/outline_library_books_white_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/topBarTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".play.PlayFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/game_background"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.23"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/randomWordTitleTextView"
                    style="@style/wm_labelStylePhone"
                    android:text="@string/english_word"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toTopOf="@+id/translationEditText"
                    app:layout_constraintEnd_toStartOf="@id/randomWordTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.3" />

                <TextView
                    android:id="@+id/randomWordTextView"
                    style="@style/wm_labelStylePhone"
                    android:text="@{playViewModel.vocabularyItem.enWord}"
                    app:layout_constraintBottom_toTopOf="@+id/translationEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.12"
                    app:layout_constraintStart_toEndOf="@id/randomWordTitleTextView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/translationEditTextTitle"
                    style="@style/wm_labelStylePhone"
                    android:text="@string/translate"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/randomWordTitleTextView"
                    app:layout_constraintStart_toStartOf="@id/randomWordTitleTextView"
                    app:layout_constraintTop_toBottomOf="@id/randomWordTitleTextView"
                    app:layout_constraintWidth_percent="0.3" />

                <EditText
                    android:id="@+id/translationEditText"
                    style="@style/wm_labelStylePhone"
                    android:ems="10"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:text="@={playViewModel.translationText}"
                    app:layout_constraintBottom_toBottomOf="@id/translationEditTextTitle"
                    app:layout_constraintEnd_toEndOf="@+id/randomWordTextView"
                    app:layout_constraintStart_toStartOf="@id/randomWordTextView"
                    app:layout_constraintTop_toTopOf="@id/translationEditTextTitle"
                    tools:ignore="LabelFor" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/recentAttemptsTextView"
                style="@style/wm_recentAttemptsLabelStylePhone"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@={playViewModel.recentAttemptsText}"
                app:layout_constraintBottom_toTopOf="@+id/acceptTranslationButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintVertical_bias="0.01999998"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/acceptTranslationButton"
                style="@style/buttonStylePhone"
                android:background="@drawable/button_background"
                android:contentDescription="@string/logo_image"
                android:enabled="false"
                android:letterSpacing="0"
                android:onClick="@{() -> playViewModel.onCheckClicked()}"
                android:text="@string/check_word"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recentAttemptsTextView"
                app:layout_constraintVertical_bias="0.060000002" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/acceptTranslationButton"
                app:srcCompat="@mipmap/ic_launcher" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>