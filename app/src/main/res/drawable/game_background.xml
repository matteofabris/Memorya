<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:endColor="@color/wm_primary"
                android:startColor="@color/wm_widgetsBackground"
                android:type="linear" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/wm_widgetsBackground" />
            <corners android:radius="18dp" />
        </shape>
    </item>

</layer-list>